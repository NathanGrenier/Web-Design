	<script type="text/javascript" defer>
      // init font size of paras
      var fontSize = 14;
      
      // Max font size
      var maxFontSize = 20;
      
      function bigger_font() {
        // Get all paras into an array
        var bigPara = document.getElementsByTagName("p");
        
				// Increase font size by 2px
        fontSize = fontSize + 2;
        
        // Make all paras larger by 2px
        for (let i = 0; i < bigPara.length; i++){
        	if (fontSize < maxFontSize){
        		bigPara[i].style.fontSize = fontSize + "px";          
          } else {
          	// Make sure that if button is spamed, value of fontSize isn't bloated. Remove what was added
            fontSize = fontSize - 2;
          }
        } 
      }
      
      
      function smaller_font() {
        // Get all paras into an array
        var smallPara = document.getElementsByTagName("p");
     
     		// Min font size
      	var minFontSize = 8;

				// Decrease font size by 2px
        fontSize = fontSize - 2;

        for (let i = 0; i < smallPara.length; i++){
        	if (fontSize > minFontSize){
        		smallPara[i].style.fontSize = fontSize + "px";
          } else {
          	// Make sure that if button is spamed, value of fontSize isn't bloated. Add was what removed
            fontSize = fontSize + 2;
          }
        } 
      }
      
      
      function new_background() {
				// Get all body elements
        var background = document.getElementsByTagName("body");
        
        for (let i = 0; i < background.length; i++){
        	// Change background color to light blue
          background[i].style.backgroundColor = "#add8e6";
        }
      }
      
      
      function resetPage() {
        // Get all paragraphs
        var para = document.getElementsByTagName("p");
        
        // Get all body elements
        var bodies = document.getElementsByTagName("body");
        
        // Revert all changes to variable values
        fontSize = 14;
        
         //Revert paras' font size to 12px
         for (let i = 0; i < para.length; i++){
        		para[i].style.fontSize = fontSize + "px";
          }
      
         // Revert background color to white 
         for (let i = 0; i < bodies.length; i++){
        		bodies[i].style.backgroundColor = "#ffffff";
          }
      }  

      
      /* THE SLIGHTLY TOUGHER - You'll need these functions
      to make the page more user-customizable */
      
      function getUserInput() {  
        /* Part 1: You need to ask the user for a background color, 
        font color, and font family. Make it 3 separate questions,
        and assign the answers to 3 variables.
        
        Then, you'll need to access the <body> tag, and 
        change the style rules for those 3 characteristics.
        Remember what I said about the <body> tag up above 
        and how you have to access it in the DOM. */
        // Ask user for background color, font color and font family
        var backgroundColor = prompt("What background color whould you like?");
        var fontColor = prompt("What font color whould you like?");
        var fontFamily = prompt("What font family whould you like?");
        
        
      }
      
      
      function writeNewParas() {
        /* Part 2 - we're going to do this together */
        
        /* First, we assign the entire form to a variable so we can 
           access it. */
        var formInfo = document.getElementById("userText");
        
        /* Then we grab the first textbox's content and assign it to 
           a variable of its own. */
        var userText1 = formInfo.elements.para1.value
        
        /* We also need the next two textboxes. You handle that part 
           right below this comment. */
        
        
        /* Lastly, we need to change the text that's on screen now.
           So first, we grab all the <p> tags, which will be stored
           as...you know something - you should already know. :) Then, 
           you change each paragraph by assigning it the new variables
           above. 
           
           Enter the rest of the code right below this line. */

        
      }

	</script>

